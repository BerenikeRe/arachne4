<?xml version="1.0" encoding="UTF-8"?>
<category xmlns="http://arachne.uni-koeln.de/schemas/category" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="surfacetreatment" xsi:schemaLocation="http://arachne.uni-koeln.de/schemas/category category.xsd">
  <display>
    <title>
      <section>
        <field datasource="surfacetreatment.Bezeichner"/>
      </section>
    </title>
    <subtitle>
      <section labelKey="Unique Identifier">
        <field datasource="Dataset.Id"/>
      </section>
    </subtitle>
    <datasections>
      <context type="surfacetreatmentaction" labelKey="Oberflächenbehandlungen" separator=" ">
        <contextSection labelKey="Zeitpunkt der Oberflächenbehandlung">
          <field datasource=".MomentOfSurfaceTreatmentAction"/>
        </contextSection>
        <contextSection labelKey="Position">
          <field datasource=".TreatmentPosition"/>
        </contextSection>
        <contextSection labelKey="Behandelter Teil der Oberfläche">
          <field datasource=".PartOfSurfaceTreated"/>
        </contextSection>
        <contextSection labelKey="Zustand">
          <field datasource=".Condition"/>
        </contextSection>
        <contextSection labelKey="Anzahl behandelter Fragmente">
          <field datasource=".NumberOfSherds"/>
        </contextSection>
        <contextSection labelKey="Art der Oberflächenbehandlung">
          <field datasource=".TreatmentAction"/>
        </contextSection>
        <contextSection labelKey="Art des Überzugs">
          <field datasource=".TreatmentActionSubCoating"/>
        </contextSection>
        <contextSection labelKey="Beschreibung der Einkerbung">
          <field datasource=".IncisionDescription"/>
        </contextSection>
        <contextSection labelKey="Typ des Stempels">
          <field datasource=".StampedStamp"/>
        </contextSection>
        <contextSection labelKey="Typ des hinzugefügten Materials">
          <field datasource=".AddedMaterialType"/>
        </contextSection>
      </context>
    </datasections>
    <contextImages>
      <!-- Show images of the isolatedsherd-records -->
      <contextImage show="always">isolatedsherd</contextImage>
    </contextImages>
  </display>
  <facets>
    <include type="facet_kategorie"/>
    <facet name="surfacetreatmentbezeichner" labelKey="Bezeichner">
      <field datasource="surfacetreatment.Bezeichner"/>
    </facet>
    <facet name="surfacetreatmentactionaction" labelKey="Art der Oberflächenbehandlung">
      <context type="surfacetreatmentaction">
        <field datasource=".TreatmentAction"/>
      </context>
    </facet>
    <facet name="surfacetreatmentactionposition" labelKey="Position der Oberflächenbehandlung">
      <context type="surfacetreatmentaction">
        <field datasource=".TreatmentPosition"/>
      </context>
    </facet>
    <facet name="surfacetreatmentactionmoment" labelKey="Zeitpunkt der Oberflächenbehandlung">
      <context type="surfacetreatmentaction">
        <field datasource=".MomentOfSurfaceTreatmentAction"/>
      </context>
    </facet>
    <facet name="surfacetreatmentactionpartofsurfacetreated" labelKey="Behandelter Teil der Oberfläche">
      <context type="surfacetreatmentaction">
        <field datasource=".PartOfSurfaceTreated"/>
      </context>
    </facet>
  </facets>
</category>
