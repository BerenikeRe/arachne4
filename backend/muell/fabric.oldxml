<?xml version="1.0" encoding="UTF-8"?>
<category name="fabric" xmlns="http://arachne.uni-koeln.de/schemas/category"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://arachne.uni-koeln.de/schemas/category category.xsd">
    <display>
        <title>
            <section separator=" / ">
                <field datasource="fabric.Origin"/>
                <field datasource="fabric.Name"/>
                <field datasource="fabric.CommonName"/>
            </section>
        </title>
        
        <subtitle>
            <section labelKey="Unique Identifier">
                <field datasource="Dataset.ID"/>
            </section>
        </subtitle>
        
        <datasections>
            <section labelKey="Fabricbeschreibungen">
                <context type="fabricdescription" labelKey="Description" separator=", ">
                    <contextSection labelKey="Freie Farbbeschreibung" separator=" ">
                        <field datasource=".ColourQualifierFreeVon"/>
                        <field datasource=".ColourFreeVon" postfix=" -"/>
                        <field datasource=".ColourQualifierFreeBis"/>
                        <field datasource=".ColourFreeBis"/>
                    </contextSection>
                    <contextSection labelKey="Farbe der Bruchstelle" separator=" ">
                        <field datasource=".ColourOfBreakQualifierVon"/>
                        <field datasource=".ColourOfBreakVon" postfix=" -"/>
                        <field datasource=".ColourOfBreakQualifierBis"/>
                        <field datasource=".ColourOfBreakBis"/>
                    </contextSection>
                    <contextSection labelKey="Zoning">
                        <field datasource=".Zoning"/>
                    </contextSection>
                    <contextSection labelKey="Farbe des Kerns" separator=" ">
                        <field datasource=".ColourOfCoreQualifierVon"/>
                        <field datasource=".ColourOfCoreVon" postfix=" -"/>
                        <field datasource=".ColourOfCoreQualifierBis"/>
                        <field datasource=".ColourOfCoreBis"/>
                    </contextSection>
                    <contextSection labelKey="Farbe der Oberfläche" separator=" ">
                        <field datasource=".ColourOfOutsideQualifierVon"/>
                        <field datasource=".ColourOfOutsideVon" postfix=" -"/>
                        <field datasource=".ColourOfOutsideQualifierBis"/>
                        <field datasource=".ColourOfOutsideBis"/>
                    </contextSection>
                    <contextSection labelKey="Machart">
                        <field datasource=".Manufacture"/>
                    </contextSection>
                    <contextSection labelKey="Härte">
                        <field datasource=".Hardness"/>
                    </contextSection>
                    <contextSection labelKey="Härte">
                        <field datasource=".Porosity"/>
                    </contextSection>
                    <contextSection labelKey="Oberflächengefühl">
                        <field datasource=".SurfaceFeel"/>
                    </contextSection>
                </context>
            </section>
            
            <context type="Entitymainabstractbefund" labelKey="Befund">
                <contextSection labelKey="Grabungsort">
                    <field datasource=".Grabungsort"/>
                </contextSection>
                <contextSection labelKey="Befund">
                    <field datasource=".Befund"/>
                </contextSection>
                <contextSection labelKey="Areal">
                    <field datasource=".Areal"/>
                </contextSection>
            </context>
            
            <context type="Entitymainabstractmorphology" labelKey="Morphologie">
                <contextSection labelKey="Functional Group">
                    <field datasource=".Level1"/>
                </contextSection>
                <contextSection labelKey="Level 2">
                    <field datasource=".Level2"/>
                </contextSection>
                <contextSection labelKey="Level 3">
                    <field datasource=".Level3"/>
                </contextSection>
                <contextSection labelKey="Level 4">
                    <field datasource=".Level4"/>
                </contextSection>
                <contextSection labelKey="Level 5">
                    <field datasource=".Level5"/>
                </contextSection>
                <contextSection labelKey="Level 6">
                    <field datasource=".Level6"/>
                </contextSection>
            </context>
        </datasections>
        
        <contextImages>
            <!-- Show images of connected sherds -->
            <contextImage show="always">fabricdescription</contextImage>
        </contextImages>
    </display>
    
    <facets>
        <!-- Facet-Context -->
        <facet name="befund" labelKey="Fabric-Context">
            <context type="Entitymainabstractbefund" separator=" / ">
                <field datasource=".Grabungsort"/>
            </context>
        </facet>
        <facet name="stratum" labelKey="Fabric-Stratum">
            <context type="Entitymainabstractbefund" separator=" / ">
                <field datasource=".Befund"/>
            </context>
        </facet>
        <facet name="areal" labelKey="Fabric-Areal">
            <context type="Entitymainabstractbefund" separator=" / ">
                <field datasource=".Areal"/>
            </context>
        </facet>
        
        <!-- Facet-Morphology --> 
        <facet name="morphology_functionalgroup" labelKey="Functional Group">
            <context type="Entitymainabstractmorphology">
                <field datasource=".Level1"/>
            </context>
        </facet>
        <facet name="morphology_2ndLevel" labelKey="2nd Level">
            <context type="Entitymainabstractmorphology">
                <field datasource=".Level2"/>
            </context>
        </facet>    
        <facet name="morphology_3rdLevel" labelKey="3rd Level">
            <context type="Entitymainabstractmorphology">
                <field datasource=".Level3"/>
            </context>
        </facet>    
        <facet name="morphology_4thLevel" labelKey="4th Level">
            <context type="Entitymainabstractmorphology">
                <field datasource=".Level4"/>
            </context>
        </facet>    
        <facet name="morphology_5thLevel" labelKey="5th Level">
            <context type="Entitymainabstractmorphology">
                <field datasource=".Level5"/>
            </context>
        </facet>    
        
        <!-- Facet-Fabric -->
        <facet name="kategorie" labelKey="Kategorie">
            <field datasource="Dataset.TableName"/>
        </facet>
        <facet name="fabriccommonname" labelKey="Common Name">
            <field datasource="fabric.CommonName"/>
        </facet>
        <facet name="fabricname" labelKey="Name">
            <field datasource="fabric.Name"/>
        </facet>
    </facets>
</category>
