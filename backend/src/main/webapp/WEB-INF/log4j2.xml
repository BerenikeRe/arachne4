        <level value="info" />
    </logger>
    
    <!- Services ->
    <logger name="de.uni_koeln.arachne.service">
        <level value="info" />
    </logger>
    
    <!- Utils ->
    <logger name="de.uni_koeln.arachne.utils">
        <level value="info" />
    </logger>
    
    <!- 3rdparty Loggers ->
    <logger name="org.springframework.core">
        <level value="info" />
    </logger>
    
    <logger name="org.springframework.beans">
        <level value="info" />
    </logger>
    
    <logger name="org.springframework.context">
        <level value="info" />
    </logger>

    -->

    <!-- Root Logger -->
    <Loggers>
        <logger name="org.springframework.web" level="warn"/>
        <Root level="info">
            <AppenderRef ref="ROLLING" />
            <!-- <AppenderRef ref="CONSOLE" /> -->
        </Root>
    </Loggers>
</Configuration>