<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <!-- Appenders -->
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p[%d{DATE}]: %c - %m%n" />
        </Console>
    
        <RollingFile name="ROLLING" 
                     fileName="/var/log/arachne/arachnedataservice/dataservice.log" 
                     filePattern="/var/log/arachne/arachnedataservice/dataservice-%i.log">
            <PatternLayout pattern="%-5p[%d{DATE}]: %c - %m%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="10240KB" />
            </Policies>
            <DefaultRolloverStrategy max="5" />
        </RollingFile>
    </Appenders>
    
    <!--     
       
    <!- 3rdparty Loggers ->
    <logger name="org.springframework.core">
        <level value="info" />
    </logger>
    
    <logger name="org.springframework.beans">
        <level value="info" />
    </logger>
    
    <logger name="org.springframework.context">
        <level value="info" />
    </logger>

    -->

    <!-- Root Logger -->
    <Loggers>
        <!-- Spring Web Logger -->
        <logger name="org.springframework.web" level="info" />
        <!-- Application Logger -->
        <logger name="de.uni_koeln.arachne" level="info" />
        <logger name="de.uni_koeln.arachne.controller" level="info" />
        <logger name="de.uni_koeln.arachne.service" level="info" />
        <logger name="de.uni_koeln.arachne.dao" level="info" />
        <Root level="info">
            <AppenderRef ref="ROLLING" />
            <!-- <AppenderRef ref="CONSOLE" /> -->
        </Root>
    </Loggers>
</Configuration>