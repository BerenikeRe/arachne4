{
   "entity":{
      "dynamic_templates":[
         {
            "facet_template":{
               "mapping":{
                  "analyzer":"keyword"
               },
               "match":"facet*"
            }
         },
         {
            "all_template":{
              "mapping": {
                "type": "string",
                "index_options" : "positions",
                "copy_to" : "searchableContent"
              },
              "match": "*",
              "match_mapping_type" : "string"
            }
         }
      ],
      "properties":{
         "datasetGroup":{
            "type":"string",
            "index" : "not_analyzed"
         },
         "entityId":{
            "type":"long"
         },
         "internalId":{
            "type":"long"
         },
         "lastModified":{
            "type":"long"
         },
         "subtitle":{
            "type":"string"
         },
         "thumbnailId":{
            "type":"long"
         },
         "title":{
            "type":"string"
         },
         "type":{
            "type":"string"
         },
         "findSpot":{
         	"type":"string",
         	"copy_to" : "searchableContent"
         },
         "findSpotLocation":{
         	"type":"geo_point"
         },
         "depository":{
            "type":"string",
            "copy_to" : "searchableContent"
         },
         "depositoryLocation":{
            "type":"geo_point"
         },
         "images": {
            "properties": {
                "imageId": {
                    "type": "long"
                },
                "sourceContext": {
                    "type": "string"
                },
                "sourceRecordId": {
                    "type": "long"
                },
                "imageSubtitle": {
                    "type": "string"
                }
            }
         },
         "searchableContent":{
         	"type":"string",
         	"omit_norms": true
         },
         "boost":{
            "type":"double"
         }
      }
   }
}