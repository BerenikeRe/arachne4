{
   "entity":{
      "dynamic_templates":[
         {
            "facet_template":{
               "mapping":{
                  "analyzer":"keyword"
               },
               "match":"facet*"
            }
         },
         {
            "all_template":{
              "mapping": {
                "type": "string",
                "omit_norms": true,
                "index_options" : "docs"
              },
              "match": "*",
              "match_mapping_type" : "string"
            }
         }
      ],
      "properties":{
         "datasetGroup":{
            "type":"string"
         },
         "entityId":{
            "type":"long",
            "boost":2.0
         },
         "internalId":{
            "type":"long",
            "boost":1.5
         },
         "lastModified":{
            "type":"long"
         },
         "subtitle":{
            "type":"string",
            "boost":2.4
         },
         "thumbnailId":{
            "type":"long"
         },
         "title":{
            "type":"string",
            "boost":4.0
         },
         "type":{
            "type":"string"
         },
         "place":{
         	"type":"string"
         },
         "location":{
         	"type":"geo_point"
         }
      }
   }
}