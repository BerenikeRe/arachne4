<?xml version="1.0" encoding="UTF-8"?>

<category name="bauwerk"
	xmlns="http://arachne.uni-koeln.de/schemas/category"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://arachne.uni-koeln.de/schemas/category category.xsd">
    <display>
        <title>
        	<section separator=" / ">
            	<field datasource="bauwerk.KurzbeschreibungBauwerk" />
            </section>
        </title>
        <subtitle>
             <section separator=" / ">
                <section separator=" / ">
                	<field datasource="bauwerk.OrtsnameModern">
                    	<ifEmpty>
                    		<field datasource="ort.Stadt" />
                    	</ifEmpty> 
                    </field>
                    <field datasource="bauwerk.OrtsnameAntik">
                    	<ifEmpty>
                    		<field datasource="ort.Ort_antik" />
                    	</ifEmpty> 
                    </field>
                </section>
                <field datasource="ort.Aufbewahrungsort"/>
            </section>
        </subtitle>
        <datasections>
        	<section labelKey="Informationen zum Bauwerk">
        		<context type="ort" labelKey="Lokalisierung" separator=", ">
        			<field datasource=".Stadt"  />
        			<field datasource=".Land" />
        			<field datasource=".Countrycode" />
        			<field datasource=".Aufbewahrungsort" />
        		</context>
        		<section labelKey="Geographische Beschreibung">
	        		<section labelKey="Situation">
	        			<field datasource="bauwerk.Situation" />
	        		</section>
	        		<section labelKey="Antike Landschaft">
	        			<field datasource="bauwerk.antikeGriechLandschaftBauwerk"/>
	        		</section>
	        		<section labelKey="Regio Rom/Italien">
	        			<field datasource="bauwerk.RegioRomItalien" />
	        		</section>
	        		<section labelKey="Kulturepoche">
	        			<field datasource="bauwerk.BauwerkKulturkreis" />
	        		</section>
	        	</section>
	            <section labelKey="Charakterisierung">
	            	<section labelKey="Gebäudetyp" separator=", ">
	                    <field datasource="bauwerk.Gebaeudetyp" />
	                    <field datasource="bauwerk.GebaeudetypSpeziell" />
	                </section>  
	                <section labelKey="Erhaltung">
	                	<field datasource="bauwerk.ErhaltungBauwerk" />
	                </section>
	                <section labelKey="Beschreibung">
	                	<field datasource="bauwerk.BeschreibungBauwerk" />
	                </section>
	                <section labelKey="Architekt">
	                	<field datasource="bauwerk.Architekt" />
	                </section>          
	                <section labelKey="Bauordnung">
	                    <field datasource="bauwerk.Bauordnung" />
	                    <field datasource="bauwerk.BauordnungBemerkung" />
	                </section>
	            </section>
	            <section labelKey="Geschichte">
	            	<section labelKey="Baugeschichte">
	            		<field datasource="bauwerk.Geschichte" />
	            	</section>
	            	<section labelKey="Ausgrabung">
	            		<field datasource="bauwerk.Ausgrabung" />
	            	</section>
	            	<section labelKey="Bemerkungen">
	            		<field datasource="bauwerk.BauwerkBemerkungen" />
	            	</section>
	            	<section labelKey="Restaurierung">
	            		<field datasource="bauwerk.Restaurierung" />
	            	</section>
	            </section>
	            <section labelKey="Datierung">
	            	<context type="datierung" labelKey="Bauwerk" separator=" ">
	            		<field datasource=".AnfEpoche" postfix="," />
	            		<field datasource=".AnfDatZeitraum" />
	            		<field datasource=".AnfDatJh" postfix=". Jh."/>
	            		<field datasource=".AnfDatvn" />
	            	</context>
	            </section>
	            <context type="literatur" labelKey="Literatur" separator=" ">
	            	<field datasource=".DAIRichtlinien" />
	            	<field datasource=".Seite" />
	            </context>
	    	</section>
        </datasections>
    </display>
    <facets>
    	<facet name="kategorie" labelKey="Kategorie">
    		<field datasource="dataset.TableName" />
    	</facet>
    	<facet name="ort" labelKey="Lokalisierung">
	    	<context type="ort" separator=", ">
		    	<field datasource=".Stadt" />
		    	<field datasource=".Land" />
	    	</context>
    	</facet>
    	<facet name="datierung-epoche" labelKey="Epoche">
	    	<context type="datierung">
		    	<field datasource=".AnfEpoche"/>
	    	</context>
    	</facet>
    	<facet name="datierung-epoche" labelKey="Epoche">
	    	<context type="datierung">
		    	<field datasource=".EndEpoche"/>
	    	</context>
    	</facet>
    	<facet name="gebaeudetyp" labelKey="Gebäudetyp">
	    	<field datasource="bauwerk.Gebaeudetyp"/>
    	</facet>
    </facets>
</category>