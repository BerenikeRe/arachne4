          <field datasource="marbilder.NegativNr" prefix="Negativnummer: "/>
          <field datasource="marbilder.Scannummer" prefix="Scannummer: "/>
          <field datasource="marbilder.Fotodatum" prefix="Fotodatum: "/>
          <field datasource="marbilder.Bemerkung" prefix="Bemerkung: "/>
        </section>
        <section labelKey="DAI Kernfelder">
          <field datasource="marbilderbestand.TitelMarbilderbestand" prefix="Titel: "/>
          <field datasource="marbilderbestand.TitelMarbilderbestandEN" prefix="Titel (Englisch): "/>
          <field datasource="marbilderbestand.Bildnummer" prefix="Bildnummer: "/>
          <field datasource="marbilderbestand.Aufnahmedatum" prefix="Aufnahmedatum: "/>
          <field datasource="marbilderbestand.Bildautor" prefix="Bildautor: "/>     
