<?xml version="1.0" encoding="UTF-8"?>
<!-- just very basic to have at least some definitions -->
<category xmlns="http://arachne.uni-koeln.de/schemas/category" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="bilder" xsi:schemaLocation="http://arachne.uni-koeln.de/schemas/category category.xsd">
  <display>
    <title>
      <section>
        <field datasource="marbilder.DateinameMarbilder"/>
      </section>
    </title>
    <subtitle>
      <section>
        <field datasource="marbilder.Scannummer"/>
      </section>
    </subtitle>
    <datasections>
      <section labelKey="Informationen zum Bild">
        <include type="ort"/>
        <section labelKey="Allgemein">
          <field datasource="marbilder.DateinameMarbilder" prefix="Dateiname: "/>
