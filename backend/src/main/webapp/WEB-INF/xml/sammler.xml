<?xml version="1.0" encoding="UTF-8"?>
<!-- just very basic to have at least some definitions -->
<category xmlns="http://arachne.uni-koeln.de/schemas/category" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="sammler" xsi:schemaLocation="http://arachne.uni-koeln.de/schemas/category category.xsd">
  <display>
    <title>
      <section separator=", ">
        <field datasource="sammler.Nachname"/>
        <field datasource="sammler.Vorname"/>
      </section>
    </title>
    <subtitle>
      <section>
        <field datasource="sammler.TitelSammler"/>
      </section>
    </subtitle>
    <datasections>
      <section labelKey="Informationen zum Sammler">
        <section labelKey="Vorname">
          <field datasource="sammler.Vorname"/>
        </section>
        <section labelKey="Nachname">
          <field datasource="sammler.Nachname"/>
        </section>
        <section labelKey="Titel">
          <field datasource="sammler.TitelSammler"/>
        </section>
        <section labelKey="Titel">
          <field datasource="sammler.TitelSammler"/>
        </section>
        <section labelKey="Beruf">
          <field datasource="sammler.Beruf"/>
        </section>
        <section labelKey="Geburt">
          <field datasource="sammler.Geburtsdatum" prefix="Datum: "/>
          <field datasource="sammler.Geburtsort" prefix="Ort: "/>
          <field datasource="sammler.Geburtsland" prefix="Land: "/>
        </section>
        <section labelKey="Tod">
          <field datasource="sammler.Todesdatum" prefix="Datum: "/>
          <field datasource="sammler.Todesort" prefix="Ort: "/>
          <field datasource="sammler.Todesland" prefix="Land: "/>
        </section>
        <section>
          <field datasource="sammler.Verwandschaftsverhaeltnis" prefix="Verwandschaftsverhältnis: "/>
          <field datasource="sammler.Sammlerreihenfolge" prefix="Sammlernummer: "/>
        </section>
      </section>
    </datasections>
  </display>
  <facets>
    <include type="facet_kategorie"/>
  </facets>
</category>
