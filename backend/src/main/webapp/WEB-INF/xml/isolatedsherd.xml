<?xml version="1.0" encoding="UTF-8"?>
<category name="isolatedsherd" xmlns="http://arachne.uni-koeln.de/schemas/category"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://arachne.uni-koeln.de/schemas/category category.xsd">
    <display>
        <title>
            <section separator=" / ">
                <field datasource="isolatedsherd.InventoryNumber"/>
                <field datasource="isolatedsherd.NitonAnalysisID"/>
            </section>
        </title>
        <subtitle>
            <section labelKey="Sherd">
                <field datasource="Dataset.Id"/>
            </section>
        </subtitle>
        <datasections>
            <section labelKey="Informationen zum Keramikfragment">
                <section labelKey="Fragmenttyp">
                    <field datasource="isolatedsherd.SherdType"/>
                </section>
                <section labelKey="Durchmesser">
                    <field datasource="isolatedsherd.Diameter" postfix="cm"/>
                </section>
                <section labelKey="Höhe">
                    <field datasource="isolatedsherd.Height" postfix="cm"/>
                </section>
                <section labelKey="Breite">
                    <field datasource="isolatedsherd.Width" postfix="cm"/>
                </section>
                <section labelKey="Länge">
                    <field datasource="isolatedsherd.LengthSize" postfix="cm"/>
                </section>
                <section labelKey="Dicke">
                    <field datasource="isolatedsherd.Thickness" postfix="cm"/>
                </section>
                <section labelKey="Gewicht">
                    <field datasource="isolatedsherd.Weight" postfix="g"/>
                </section>
                <section labelKey="Prozentualer Randanteil">
                    <field datasource="isolatedsherd.RimPercentage" postfix="%"/>
                </section>
            </section>
            <section labelKey="Informationen zur Oberflächenbehandlung">
                <context type="surfacetreatment" labelKey="Oberflächenbehandlung" separator=" ">
                    <contextSection labelKey="Identifier">
                        <field datasource=".Bezeichner"/>
                    </contextSection>
                    <contextSection labelKey="Verbundene Oberflächenbehandlungen">
                        <field datasource=".ConnectedActions"/>
                    </contextSection>
                </context>
            </section>            
            <include type="ort"/>
        </datasections>
        <contextImages>
            <!-- Show images of connected types -->
            <contextImage show="always">Isolatedsherdmainabstractmorphology</contextImage>
        </contextImages>
        
    </display>
    <facets>
        <facet name="kategorie" labelKey="Kategorie">
            <field datasource="Dataset.TableName"/>
        </facet>
        <facet name="sherdtype" labelKey="Typ des Keramikfragments">
            <field datasource="isolatedsherd.SherdType"/>
        </facet>
        <facet name="inventorynumber" labelKey="Inventernummer">
            <field datasource="isolatedsherd.InventoryNumber"/>
        </facet>
        <facet name="nitonanalysisnumber" labelKey="Niton-Analyse-Nummer">
            <field datasource="isolatedsherd.NitonAnalysisID"/>
        </facet>
        <facet name="surfacetreatmentbezeichner" labelKey="Oberflächenbehandlung">
            <context type="surfcatreatment">
                <field datasource="surfacetreatment.Bezeichner"/>
            </context>
        </facet>
        <facet name="ort" labelKey="Lokalisierung">
            <context type="ort" separator=", ">
                <field datasource=".Stadt"/>
                <field datasource=".Land"/>
            </context>
        </facet>
    </facets>
</category>
