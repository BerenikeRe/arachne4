<?xml version="1.0" encoding="UTF-8"?>

<category name="fallback"	
	xmlns="http://arachne.uni-koeln.de/schemas/category"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://arachne.uni-koeln.de/schemas/category category.xsd">
    <display>
        <title>
        	<section separator=" - ">
	        	<field datasource="buch.KurzbeschreibungBuch" />
	            <field datasource="literatur.Titel" />
	            <field datasource="relief.KurzbeschreibungRelief" />
	            <!--
	            <field datasource="marbilder.Pfad" />
	            <field datasource="reproduktion.KurzbeschreibungReproduktion" />
	            <field datasource="rezeption.KurzbeschreibungRezeption" />
	            <field datasource="topographie.KurzbeschreibungTopographie" />
	            <field datasource="typus.KurzbeschreibungTypus" />
	            -->
            </section>
        </title>
        <subtitle>
             <section>
                <section separator=" / ">
                	<field datasource="ort.Stadt" />
                    <field datasource="ort.Ort_antik" />
                </section>
                <field datasource="ort.Aufbewahrungsort"/>
            </section>
        </subtitle>
        <datasections>
        	<context type="ort" labelKey="Lokalisierung" separator=", ">
        		<field datasource=".Stadt"  />
        		<field datasource=".Land" />
        		<field datasource=".Countrycode" />
        		<field datasource=".Aufbewahrungsort" />
        	</context>
        </datasections>
    </display>
    <facets>
    	<facet name="kategorie" labelKey="Kategorie">
    		<field datasource="Dataset.TableName" />
    	</facet>
    	<facet name="ort" labelKey="Lokalisierung">
	    	<context type="ort" separator=", ">
		    	<field datasource=".Stadt" />
		    	<field datasource=".Land" />
	    	</context>
    	</facet>
    </facets>
</category>