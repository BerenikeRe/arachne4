<?xml version="1.0" encoding="UTF-8"?>

<category name="sarkophag"
    xmlns="http://arachne.uni-koeln.de/schemas/category"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://arachne.uni-koeln.de/schemas/category category.xsd">
	<display>
		<title>
			<section>
				<field datasource="sarkophag.KurzbeschreibungSarkophag" />
			</section>
		</title>
		<subtitle>
			<section separator=", ">
				<context type="ort" separator=", ">
					<field datasource=".Stadt" />
					<field datasource=".Land" />
					<field datasource=".Aufbewahrungsort" />
					<field datasource=".Zusatz" /> <!-- AdditionalInfosJSON -->
					<field datasource=".InvNr" /> <!-- AdditionalInfosJSON -->
				</context>
			</section>
		</subtitle>
		<datasections>
			<context type="Sarcophagusimages">
				<field datasource=".thisisjustadummyfield" />
			</context>
			<section labelKey="SarcophagusImages">
				<field datasource="Sarcophagusimages.images" />
			</section>
			<section labelKey="Informationen zum Sarkophag">
				<section labelKey="Aufbewahrung" separator=", ">
					<context type="ort" separator=", ">
						<field datasource=".Stadt" />
						<field datasource=".Ort_antik" prefix="(" postfix=") " />
						<field datasource=".Land" />
						<field datasource=".Countrycode" prefix="(" postfix=") " />
						<field datasource=".Aufbewahrungsort" />
						<field datasource=".Zusatz" /> <!-- AdditionalInfosJSON -->
						<field datasource=".BerlinIdentNr" prefix="Berlin Ident.Nr. " /> <!-- AdditionalInfosJSON -->
						<field datasource=".AltInvNr" prefix="Alte Inv.-Nr. " /> <!-- AdditionalInfosJSON -->
						<field datasource=".InvNr" prefix="Inv.-Nr. " /> <!-- AdditionalInfosJSON -->
						<field datasource=".ArtOrtsangabe" search="Aufbewahrung Automatisch erstellt" replace="Aufbewahrungsort" prefix="- Ortsangabe ist " postfix=" -" /> <!-- AdditionalInfosJSON --> 
					</context>
				</section>
				<section labelKey="Herkunft">
					<section separator=", ">
						<field datasource="sarkophag.Fundstaat" />
						<field datasource="sarkophag.Fundort" />
						<field datasource="sarkophag.Fundkontext" />
					</section>
					<context type="objekt" separator=", ">
						<field datasource=".FunddatumObjekt" />
						<field datasource=".Herkunft" />
						<field datasource=".HerkFundKommentar" />
					</context>
					<context type="bauwerk">
						<field datasource=".BauwerkKulturkreis" prefix="Kulturkreis: " />
					</context>
				</section>
				<section labelKey="Datierung">
					<section>
						<section separator=": ">
							<context type="datierung" separator=", ">
								<field datasource=".TypDatierung" />
								<field datasource=".nachantik" />
								<field datasource=".FestDat" prefix="(fest datiert: " postfix=") " />
							</context>
							<section separator=" - ">
								<context type="datierung" separator=" ">
									<field datasource=".AnfEpoche" postfix=", "/>
									<field datasource=".AnfKultur" />
									<field datasource=".AnfDatZeitraum" />
									<field datasource=".AnfDatJt" postfix=". Jt. " />
									<field datasource=".AnfDatJh" postfix=". Jh. " />
									<field datasource=".AnfDatvon" />
									<field datasource=".AnfPraezise" prefix=" (" postfix=") " />
									<field datasource=".AnfTerminus" prefix=", "/>
								</context>
								<context type="datierung" separator=" ">
									<field datasource=".EndEpoche" postfix=", "/>
									<field datasource=".EndKultur" />
									<field datasource=".EndDatZeitraum" />
									<field datasource=".EndDatJt" postfix=". Jt. " />
									<field datasource=".EndDatJh" postfix=". Jh. " />
									<field datasource=".EndDatvon" />
									<field datasource=".EndPraezise" prefix=" (" postfix=") " />
									<field datasource=".EndTerminus" prefix=", "/>
								</context>
							</section>
						</section>
					</section>
					<section prefix="- " postfix=" -" separator="">
						<context type="datierung" separator=" / ">
							<field datasource=".Argument" prefix="Argument: " />
							<field datasource=".DatVorschlagAutor" prefix="nach: " />
						</context>
					</section>
				</section>
				<section labelKey="Thematik">
					<section labelKey="Allgemein">
						<field datasource="sarkophag.Thematik" />
						<field datasource="sarkophag.ThematikFrei" />
					</section>
					<section labelKey="Deckel">
						<field datasource="sarkophag.ThematikDeckel" prefix="Thematik: " />
						<field datasource="sarkophag.ThematikDeckelVorderseite" prefix="Hauptthema: " />
						<field datasource="sarkophag.ThematikDeckelNebenseiten" prefix="Nebenthema: " />
					</section>
					<section labelKey="Kasten">
						<field datasource="sarkophag.ThematikKasten" prefix="Thematik: " />
						<field datasource="sarkophag.ThematikKastenVorderseite" prefix="Hauptthema: " />
						<field datasource="sarkophag.ThematikKastenNebenseiten" prefix="Nebenthema: " />
					</section>
				</section>
				<section labelKey="Dekoration">
					<field datasource="sarkophag.Dekoration" />
				</section>
				<section labelKey="Material">
					<field datasource="sarkophag.Material" />
				</section>
        		<context type="literatur" labelKey="Literatur" separator=", ">
	            	<field datasource=".DAIRichtlinien" />
	            	<field datasource=".Seite" />
	            	<linkField labelKey="ZenonID" datasource=".ZenonID" prefix="http://testopac.dainst.org/#zenon/book/" />
	            	<field datasource=".Anmerkung" prefix="Anm. " /> <!-- AdditionalInfosJSON -->
	            	<field datasource=".Abbildung" prefix="Abb. " /> <!-- AdditionalInfosJSON -->
	            	<field datasource=".Katnummer" prefix="Kat.Nr. " /> <!-- AdditionalInfosJSON -->
	            	<field datasource=".Tafel" prefix="Taf. " /> <!-- AdditionalInfosJSON -->
	            	<field datasource=".Figur" prefix="Fig. " /> <!-- AdditionalInfosJSON -->
	            	<field datasource=".Beilage" prefix="Beil. " /> <!-- AdditionalInfosJSON -->
	            	<field datasource=".subVoce" prefix="s.v. " /> <!-- AdditionalInfosJSON -->
	            	<field datasource=".KommentarLitZitat" prefix="(" postfix=")" /> <!-- AdditionalInfosJSON -->
	            	<field datasource=".Supplement" prefix="Supplement: " /> <!-- AdditionalInfosJSON -->
	            </context>
				<section labelKey="Zugehörige Datensätze in Arachne">
		            <context type="gruppen" labelKey="Mehrteilige Denkmäler" separator=" ">
		            	<field datasource=".KurzbeschreibungGruppen" />
		            </context>
		            <context type="objekt" labelKey="Einzelobjekte">
		            	<field datasource=".KurzbeschreibungObjekt" />
		            </context>
		            <context type="relief" labelKey="Szenen" separator=" ">
		            	<field datasource=".Szenennummer" prefix="Szene " postfix=":" />
		            	<field datasource=".KurzbeschreibungRelief" />
		            </context>
		            <context type="realien" labelKey="Einzelmotive">
		            	<field datasource=".KurzbeschreibungRealien" />
		            </context>
				</section>
			</section>
		</datasections>
	</display>
	<facets>
    	<facet name="kategorie" labelKey="Kategorie">
    		<field datasource="Dataset.TableName" />
    	</facet>
    	<facet name="ort" labelKey="Lokalisierung"> <!-- entspricht: gleicher Aufbewahrungsort -->
			<context type="ort" separator=", ">
				<field datasource=".Land"/>
				<field datasource=".Stadt"/>
				<field datasource=".Aufbewahrungsort" />
			</context>
    	</facet>
    	<facet name="thematik" labelKey="Thematik">
    		<field datasource="sarkophag.Thematik" />
    	</facet>
    	<facet name="thematikFrei" labelKey="Thematik">
    		<field datasource="sarkophag.ThematikFrei" />
    	</facet>
    	<facet name="thematikDeckel" labelKey="Thematik">
    		<field datasource="sarkophag.ThematikDeckel" />
    	</facet>
    	<facet name="thematikDeckelVorderseite" labelKey="Thematik">
    		<field datasource="sarkophag.ThematikDeckelVorderseite" />
    	</facet>
    	<facet name="thematikDeckelNebenseiten" labelKey="Thematik">
    		<field datasource="sarkophag.ThematikDeckelNebenseiten" />
    	</facet>
    	<facet name="thematikKasten" labelKey="Thematik">
    		<field datasource="sarkophag.ThematikKasten" />
    	</facet>
    	<facet name="thematikKastenVorderseite" labelKey="Thematik">
    		<field datasource="sarkophag.ThematikKastenVorderseite" />
    	</facet>
    	<facet name="thematikKastenNebenseiten" labelKey="Thematik">
    		<field datasource="sarkophag.ThematikKastenNebenseiten" />
    	</facet>
    	<facet name="dekoration" labelKey="Dekoration">
    		<field datasource="sarkophag.Dekoration" />
    	</facet>
	</facets>
</category>