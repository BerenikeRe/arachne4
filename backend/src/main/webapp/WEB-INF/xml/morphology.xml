<?xml version="1.0" encoding="UTF-8"?>
<!--
  CeramEgypt Objects 2.0
  This represents a type of morphology
  status: to be done
-->
<category xmlns="http://arachne.uni-koeln.de/schemas/category" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="morphology" xsi:schemaLocation="http://arachne.uni-koeln.de/schemas/category category.xsd">
  <display>
    <title>
      <section separator=", " labelKey="Morphology">
        <!-- field datasource="morphology.Level1"/ -->
        <field datasource="morphology.Level2"/>
        <field datasource="morphology.Level3"/>
        <field datasource="morphology.Level4"/>
        <field datasource="morphology.Level5"/>
        <field datasource="morphology.Level6"/>
      </section>
    </title>
    <subtitle>
      <section labelKey="Unique Identifier">
        <field datasource="Dataset.Id"/>
      </section>
    </subtitle>
    <datasections>

        <include type="morphology"></include>

        <include type="datierung"/>

        <context type="Entitymainabstractisolatedsherd" labelKey="Fragment">
          <contextSection labelKey="Typ">
            <field datasource=".SherdType"/>
          </contextSection>
          <contextSection labelKey="Inventarnummer">
            <field datasource=".InventoryNumber"/>
          </contextSection>
          <contextSection labelKey="Niton-Analyse-Nummer">
            <field datasource=".NitonAnalysisNumber"/>
          </contextSection>
        </context>

    </datasections>
    <contextImages>
      <!-- Show images of all isolated sherds which are conntected with the current morphology -->
      <contextImage show="always">Entitymainabstractisolatedsherd</contextImage>
    </contextImages>
  </display>

  <facets>
    <include type="facet_kategorie"/>
	<facet name="morphology_functionalgroup" labelKey="Funktionelle Gruppe">
    	<field datasource="morphology.Level1"/>
    </facet>
    <facet name="morphology_2ndLevel" labelKey="2nd Level"><!-- yes, it's intentional, that level 2 does not depends on 1 -->
    	<field datasource="morphology.Level2"/>
    </facet>    
    <facet name="morphology_3thLevel" labelKey="3rd Level" dependsOn="morphology_2ndLevel">
		<field datasource="morphology.Level3"/>
    </facet>    
    <facet name="morphology_4thLevel" labelKey="4th Level" dependsOn="morphology_3thLevel">
		<field datasource="morphology.Level4"/>
    </facet>    
    <facet name="morphology_5thLevel" labelKey="5th Level" dependsOn="morphology_4thLevel">
		<field datasource="morphology.Level5"/>
    </facet>
    <include type="facet_datierung" />
    <facet name="grabungsinternetypnummer" labelKey="Grabungsinterne Typnummer">
      <context type="mainabstract" separator="">
        <field datasource=".GrabungsinterneTypennummer"/>
        <field datasource=".GrabungsinterneTypennummerSub"/>
      </context>
    </facet>
  </facets>
</category>
