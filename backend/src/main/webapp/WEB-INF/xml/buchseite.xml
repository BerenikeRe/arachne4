<?xml version="1.0" encoding="UTF-8"?>

<!-- just very basic to have at least some definitions -->
<category name="buchseite"
	xmlns="http://arachne.uni-koeln.de/schemas/category"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://arachne.uni-koeln.de/schemas/category category.xsd">
    <display>
        <title>
        	<section>
        		<field datasource="buchseite.KurzbeschreibungBuchseite" />
            </section>
        </title>
        <subtitle>
            <section>
            	<field datasource="buchseite.seite" prefix="Seite: " />
            </section>
        </subtitle>
        <datasections>
        	<section labelKey="Informationen zur Buchseite">
        		<section labelKey="">
	            	<field datasource="buchseite.image" prefix="Dateiname: " />
	            </section>
        	</section>
        </datasections>
    </display>
    <facets>
    	<facet name="kategorie" labelKey="Kategorie">
    		<field datasource="Dataset.TableName" />
    	</facet>
    </facets>
</category>