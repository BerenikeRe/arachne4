<?xml version="1.0" encoding="UTF-8"?>
<category name="surfacetreatment" xmlns="http://arachne.uni-koeln.de/schemas/category"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://arachne.uni-koeln.de/schemas/category category.xsd">
    <display>
        <title>
            <section>
                <field datasource="surfacetreatment.Bezeichner"/>
            </section>
        </title>
        <subtitle>
            <section labelKey="Surfacetreatment">
                <field datasource="Dataset.Id"/>
            </section>
        </subtitle>

        <datasections>
            <section labelKey="Surfacetreatment Actions">
                <context type="surfacetreatmentaction" labelKey="Oberflächenbehandlungen"
                    separator=" ">
                    <field datasource=".MomentOfSurfaceTreatmentAction"/>
                    <field datasource=".TreatmentPosition"/>
                    <field datasource=".PartOfSurfaceTreated"/>
                    <field datasource=".Condition"/>
                    <field datasource=".NumberOfSherds"/>

                    <field datasource=".TreatmentAction"/>
                    <field datasource=".TreatmentActionSubCoating"/>
                    <field datasource=".IncisionDescription"/>
                    <field datasource=".StampedStamp"/>
                    <field datasource=".AddedMaterialType"/>
                </context>
            </section>
        </datasections>
    </display>
    <facets>
        <facet name="kategorie" labelKey="Kategorie">
            <field datasource="Dataset.TableName"/>
        </facet>
        <facet name="surfacetreatment-bezeichner" labelKey="Bezeichner">
            <field datasource="surfacetreatment.Bezeichner"/>
        </facet>
        <facet name="surfacetreatmentaction-action" labelKey="Art der Oberflächenbehandlung">
            <context type="surfacetreatmentaction">
                <field datasource=".TreatmentAction"/>
            </context>
        </facet>
        <facet name="surfacetreatmentaction-position" labelKey="Position der Oberflächenbehandlung">
            <context type="surfacetreatmentaction">
                <field datasource=".TreatmentPosition"/>
            </context>
        </facet>
        <facet name="surfacetreatmentaction-moment" labelKey="Zeitpunkt der Oberflächenbehandlung">
            <context type="surfacetreatmentaction">
                <field datasource=".MomentOfSurfaceTreatmentAction"/>
            </context>
        </facet>
        <facet name="surfacetreatmentaction-partofsurfacetreatet" labelKey="Behandelter Teil der Oberfläche">
            <context type="surfacetreatmentaction">
                <field datasource=".PartOfSurfaceTreated"/>
            </context>
        </facet>
    </facets>
</category>
