<?xml version="1.0" encoding="UTF-8"?>
<category name="einschluss" xmlns="http://arachne.uni-koeln.de/schemas/category"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://arachne.uni-koeln.de/schemas/category category.xsd">
    <display>
        <title>
            <section separator=" / ">
                <field datasource="einschluss.Einschlussart"/>
            </section>
        </title>
        <subtitle>
            <section labelKey="Inclusion">
                <field datasource="Dataset.Id"/>
            </section>
        </subtitle>

        <datasections>
            <section labelKey="Informationen zum Einschluss">
                <section labelKey="Einschlussart">
                    <field datasource="einschluss.Einschlussart"/>
                </section>
                <section labelKey="Häufigkeit">
                    <field datasource="einschluss.Haeufigkeit"/>
                </section>
                <section labelKey="Durchschnittliche Größe">
                    <field datasource="einschluss.DurchschnittlicheGroesse"/>
                </section>
                <section labelKey="Verteilung">
                    <field datasource="einschluss.Verteilung"/>
                </section>
                <section labelKey="Form">
                    <field datasource="einschluss.Form"/>
                </section>
                <section labelKey="Opazität">
                    <field datasource="einschluss.Opacity"/>
                </section>
                <section labelKey="Freie Farbbeschreibung" separator=" ">
                    <field datasource="einschluss.ColourQualifierVon"/>
                    <field datasource="einschluss.ColourFreeVon" postfix=" - "/>
                    <field datasource="einschluss.ColourQualifierBis"/>
                    <field datasource="einschluss.ColourFreeBis"/>
                </section>
            </section>
        </datasections>
        <contextImages>
            <!-- Show images of connected fabricdescriptions -->
            <contextImage show="always">Fabricdescription</contextImage>
        </contextImages>
    </display>
    <facets>
        <facet name="kategorie" labelKey="Kategorie">
            <field datasource="Dataset.TableName"/>
        </facet>
    </facets>
</category>
